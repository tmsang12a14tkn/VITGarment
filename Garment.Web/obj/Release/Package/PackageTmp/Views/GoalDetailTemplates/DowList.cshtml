@model DowScheduleView

<header class="main-box-header clearfix">
    <div class="filter-block pull-right">
        <a class="btn btn-success pull-right" href="/GoalDetailTemplates/Create?dayOfWeek=@Model.DayOfWeek">
            <i class="fa fa-plus fa-lg"></i> Thêm mới
        </a>
    </div>
</header>
<div id="addField-@Model.DayOfWeek"></div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><span>Bắt đầu</span></th>
                <th><span>Kết thúc</span></th>
                <th>Số phút</th>
                <th>Phiên</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GoalDetailTemplates)
            {
                <tr id="programschedules_@item.Id">
                    <td>
                        @Html.DisplayFor(model => item.StartCountTime)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.EndCountTime)
                    </td>
                    <td>
                        @item.Minute
                    </td>
                    <td>
                        @item.SessionId
                    </td>
                    <td style="width: 15%;">
                        <a href="/GoalDetailTemplates/Edit/@item.Id" class="table-link gray" title="Chỉnh sửa">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })"
                           data-toggle="modal"
                           data-target="#deleteModal"
                           data-ajax="true"
                           data-ajax-complete=""
                           data-ajax-mode="replace"
                           data-ajax-update="#delete-content"
                           class="table-link danger">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
