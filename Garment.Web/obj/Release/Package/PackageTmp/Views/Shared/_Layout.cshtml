            @RenderBody()

            <footer id="footer-bar" class="row" style="opacity: 1;">
                <p id="footer-copyright" class="col-xs-12">
                    © 2014 <a href="/" target="_blank">VIT Garment</a>. Powered by VIT Telecom.
                </p>
            </footer>
        </div>
    </div>
