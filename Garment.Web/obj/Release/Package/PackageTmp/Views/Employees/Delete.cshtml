@model Employee

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="myModalLabel">Bạn có chắc chắn muốn xóa nhân viên này không?</h4>
</div>
@using (Ajax.BeginForm("Delete", "Employees", new { id = Model.Id }, new AjaxOptions
{
    OnSuccess = "OnDeleteSuccess",
    HttpMethod = "Post"
}, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-group">
            <div class="form-field-display">
                @Model.Name
            </div>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" name="confirmText" placeholder="Nhập 'Đồng ý'" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success btn-ok">
            <i class="fa fa-check"></i>
            Đồng ý
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            <i class="fa fa-times"></i>
            Hủy
        </button>
    </div>
}

